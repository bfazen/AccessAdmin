<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:stretchColumns="0" >

        <TableLayout
            android:id="@+id/adw_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:stretchColumns="0"
            android:visibility="gone" >

            <View
                android:id="@+id/adw_row_0"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/white_color" />

            <TableRow
                android:id="@+id/adw_row_1"
                android:layout_width="wrap_content"
                android:background="#969696" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="@string/adw_launcher"
                    android:textColor="#dfdfdf"
                    android:textSize="16sp" />
            </TableRow>

            <TableRow
                android:id="@+id/adw_row_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingTop="5dp" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/view_settings"
                    android:textColor="#ffffff"
                    android:textSize="20sp" />

                <CheckBox
                    android:id="@+id/adw_checkbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal" />
            </TableRow>

            <TableRow
                android:id="@+id/adw_row_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/edit_settings"
                    android:textColor="#ffffff"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/adwButton"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:text="@string/adwEdit"
                    android:textSize="16sp" />
            </TableRow>
        </TableLayout>

        <TableLayout
            android:id="@+id/access_forms_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:stretchColumns="0"
            android:visibility="gone" >

            <View
                android:id="@+id/access_forms_row_0"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/white_color" />

            <TableRow
                android:id="@+id/access_forms_row_1"
                android:background="#969696" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="@string/access_forms"
                    android:textColor="#dfdfdf"
                    android:textSize="16sp" />
            </TableRow>

            <TableRow
                android:id="@+id/access_forms_row_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingTop="5dp" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/view_settings"
                    android:textColor="#ffffff"
                    android:textSize="20sp" />

                <CheckBox
                    android:id="@+id/access_forms_checkbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal" />
            </TableRow>

            <TableRow
                android:id="@+id/access_forms_row_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/edit_settings"
                    android:textColor="#ffffff"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/access_forms_button"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:text="@string/access_forms_edit"
                    android:textSize="16sp" />
            </TableRow>
        </TableLayout>

        <TableLayout
            android:id="@+id/access_mrs_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:stretchColumns="0"
            android:visibility="gone" >

            <View
                android:id="@+id/access_mrs_row_0"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/white_color" />

            <TableRow
                android:id="@+id/access_mrs_row_1"
                android:background="#969696" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="@string/access_mrs"
                    android:textColor="#dfdfdf"
                    android:textSize="16sp" />
            </TableRow>

            <TableRow
                android:id="@+id/access_mrs_row_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingTop="5dp" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/view_settings"
                    android:textColor="#ffffff"
                    android:textSize="20sp" />

                <CheckBox
                    android:id="@+id/access_mrs_checkbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal" />
            </TableRow>

            <TableRow
                android:id="@+id/access_mrs_row_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingTop="5dp" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/enable_log"
                    android:textColor="#ffffff"
                    android:textSize="20sp" />

                <CheckBox
                    android:id="@+id/access_mrs_log_checkbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal" />
            </TableRow>

            <TableRow
                android:id="@+id/access_mrs_row_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/edit_settings"
                    android:textColor="#ffffff"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/access_mrs_button"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:text="@string/access_mrs_edit"
                    android:textSize="16sp" >
                </Button>
            </TableRow>
        </TableLayout>

        <TableLayout
            android:id="@+id/ushahidi_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:stretchColumns="0"
            android:visibility="gone" >

            <View
                android:id="@+id/ushahidi_row_0"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/white_color" />

            <TableRow
                android:id="@+id/ushahidi_row_1"
                android:layout_width="wrap_content"
                android:background="#969696" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="@string/ushahidi"
                    android:textColor="#dfdfdf"
                    android:textSize="16sp" />
            </TableRow>

            <TableRow
                android:id="@+id/ushahidi_row_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingTop="5dp" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/view_settings"
                    android:textColor="#ffffff"
                    android:textSize="20sp" />

                <CheckBox
                    android:id="@+id/ushahidi_checkbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal" />
            </TableRow>

            <TableRow
                android:id="@+id/ushahidi_row_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/edit_settings"
                    android:textColor="#ffffff"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/ushahidiButton"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:text="@string/adwEdit"
                    android:textSize="16sp" />
            </TableRow>
        </TableLayout>
    </LinearLayout>

</ScrollView>